{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./build",
    "strict": true,
    "rootDirs": ["./src"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
  },
  "exclude": ["./build", "./node_modules/*"],
  "include": ["./src/*"]
}
